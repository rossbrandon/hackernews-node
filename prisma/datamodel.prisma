type Link {
  id: ID! @unique
  createdAt: DateTime!
  description: String!
  url: String!
  postedBy: User
  votes: [Vote!]! @relation(name: "LinkOnVote", onDelete: CASCADE)
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  links: [Link!]!
  votes: [Vote!]!
}

type Vote {
  id: ID! @unique
  link: Link! @relation(name: "LinkOnVote", onDelete: SET_NULL)
  user: User!
}
